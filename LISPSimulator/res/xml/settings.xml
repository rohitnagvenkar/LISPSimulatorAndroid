<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:summary="Appearance"
        android:title="Appearance" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="lineNumberingSetting"
            android:summary="On/Off"
            android:title="Line Numbering" />

        <ListPreference
            android:defaultValue="14"
            android:key="fontSizeSetting"
            android:summary="Select the font size you want"
            android:title="Font size"
            android:entries="@array/fontSizeArray"
            android:entryValues="@array/fontSizeValues" />
    </PreferenceCategory>
    <PreferenceCategory
        android:summary="Behaviour"
        android:title="Behaviour" >
    </PreferenceCategory>

</PreferenceScreen>